<MyLayout>
    slide_text: slider_label
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 0
        spacing: 20

        Label:
            id: slider_label
            text_size: self.size
            halign: "center"
            valign: "center"
            text: "Slide the slider!"
            font_size: 32

        Slider:
            min: 1
            max: 50
            step: 1
            orientation: "horizontal"
            on_value: root.slide_it(*args)

        