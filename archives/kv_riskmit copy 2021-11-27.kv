#<RiskMit>:
<LoginScreen>:
    name: "login_screen"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 20
        padding: 25
        spacing: 25
        orientation: "vertical"

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: login
            hint_text: "username"
            mode: "rectangle"
            icon_left: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            mode: "rectangle"
            icon_left: "eye_off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            width: 100
            pos_hint: {"center_x": 0.5}
            on_press: root.login()

        MDTextButton:
            text: "REGISTER"
            font_size: 12
            width: 100
            pos_hint: {"center_x": 0.5}
            on_press: 
                app.root.current = "register_screen"
                root.manager.transition.direction = 'up'

        MDLabel:
            id: failed
            text: ""
            font_size: 40
            halaign: 'center'

MDScreen:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'RISKMIT'
            md_bg_color: app.theme.cls.primary_color
            #icon: 'filter-menu'
            anchor_title: 'center'
            elevation: 10
            left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]
            right_action_items: [["logout", lambda x: root.log_out()], ['cog-outline', lambda x: root.open_superuser()]]
            on_action_button: nav_drawer.set_state('open')
            mode: "center"

        MDLabel:
            text: "test"
    
        MDNavigationLayout:
        
            MDNavigationDrawer:
                MDButton:
                    text: "OVERVIEW"
                    on_release:
                        sm2.current = "overview"
                MDButton:
                    text: "POSITIONS"
                    on_release:
                        sm2.current = "positions"
                MDButton:
                    text: "ORDERS"
                    on_release:
                        sm2.current = "orders"




<RegisterScreen>:
    name: "register_screen"

    MDBoxLayout:
        orientation: "vertical"
        #spacing: 20
        #padding: 20
        
        MDToolbar:
            title: "NEW REGISTRATION"

        MDLabel:
            text: "Make it work"
            valign: 'top'
            halign: 'center'
            size_hint: (1, 0.1)

        MDLabel:
            text: "or else"
            valign: 'top'
            halign: 'center'

        MDRoundFlatButton:
            text: "BACK"
            theme_text: 'Custom'
            
            #text_color: app.theme_cls.secondary_color
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            on_press: app.root.current = 'login_screen'

        MDLabel:
            text: ""
            size_hint: (1,0.1)


           
 
<OverviewScreen>:
    name: "overview"
    MDBoxLayout:
        MDLabel:
            text: 'OPEN SELL ORDERS'
            pos_hint: {'center_x': 0.5, 'center_y':0.5}

<PositionsScreen>:
    name: "positions"
    MDBoxLayout:
        MDLabel:
            text: 'OPEN SELL ORDERS'
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            

        


            
<SuperUserScreen>:
    name: "super_user"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'SUPERUSER'
            icon: 'account-supervisor-outline'
            anchor_title: 'left'
            elevation: 10
            left_action_items: [['backspace-outline', lambda x: root.back_button()]]
            right_action_items: [["cog-outline", lambda x: root.open_superuser()]]
                    
        MDBoxLayout:
            orientation: "vertical"
            
            MDNavigationRail:
                id: rail_su
                md_bg_color: gch('#344954')
                color_normal: gch('#718089')
                color_active: gch('#f3ab44')

                MDNavigationRailItem:
                    icon: 'cog-outline'
                    text: 'Functions'
                    on_press: app.root.current = "super_user"

                MDNavigationRailItem:
                    icon: 'account-group-outline'
                    text: 'Users'
                    on_press: app.root.current = "users_screen"

                MDNavigationRailItem:
                    icon: "card-account-details-outline"
                    text: "Accounts"
                    on_press: app.root.current = "account_screen"


