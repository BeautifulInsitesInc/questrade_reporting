<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 20

        Label:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "center"
            text: "Enter a word"
            font_size: 32

        TextImput:
            id: word_input
            multiline: False
            size_hint: (1,.5)

        Button:
            size_hint: (1,.5)
            font_size: 32
            text: "Submit"
            on_press: root.press()