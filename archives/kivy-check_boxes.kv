<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 0
        spacing: 20

        Label:
            text: "Selection optios"
            font_size:32

        GridLayout:
            cols: 2

            Label:
                text: "Peperoni"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "pepperoni")
            Label:
                text: "Cheese"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "chees")
            Label:
                text: "mushroom"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "mushroom")

        Label:
            id: output_label